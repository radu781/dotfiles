{
    // neovim - begin
    // https://github.com/vscode-neovim/vscode-neovim/issues/1051
    "extensions.experimental.affinity": {
        "asvetliakov.vscode-neovim": 1
    },
    "vscode-neovim.neovimExecutablePaths.win32": "C:\\tools\\neovim\\nvim-win64\\bin\\nvim.exe",
    "vscode-neovim.neovimInitVimPaths.win32": "C:\\\\Users\\\\Radu\\\\AppData\\\\Local\\\\nvim\\\\init.lua",
    // neovim - end

    "terminal.external.windowsExec": "C:\\Program Files\\Git\\git-bash",
    "workbench.startupEditor": "none",
    "terminal.integrated.defaultProfile.windows": "Git Bash",

    // discord rpc - begin
    "vscord.app.name": "Code",
    "vscord.status.details.text.debugging": "In {workspace}ðŸŒ¿{git_branch} ",
    "vscord.status.details.text.editing": "In {workspace}ðŸŒ¿{git_branch}",
    "vscord.status.details.text.noWorkSpaceText": "",
    "vscord.status.details.text.viewing": "In {workspace}ðŸŒ¿{git_branch}",
    "vscord.status.image.large.debugging.text": "Debugging a {lang} file",
    "vscord.status.image.large.editing.text": "Editing a {lang} file",
    "vscord.status.problems.enabled": false,
    "vscord.status.problems.text": "",
    "vscord.status.state.text.debugging": "Working on {file_name}{file_extension}",
    "vscord.status.state.text.editing": "Working on {file_name}{file_extension}",
    // discord rpc - end

    // editor experience - begin
    "editor.cursorBlinking": "smooth",
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.stickyScroll.enabled": true,
    "editor.minimap.enabled": false,
    "editor.lineNumbers": "relative",
    "workbench.iconTheme": "material-icon-theme",
    "workbench.activityBar.location": "hidden",
    "editor.rulers": [
        {
            "column": 80,
            "color": "#1f1f2f"
        },
        {
            "column": 100,
            "color": "#2f2f3f"
        },
        {
            "column": 120,
            "color": "#4f4f5f"
        },
    ],
    "editor.semanticHighlighting.enabled": true,
    "editor.inlayHints.enabled": "offUnlessPressed",
    "editor.renderFinalNewline": "dimmed",
    "workbench.editor.limit.value": 1,
    "workbench.editor.limit.perEditorGroup": true,
    "workbench.editor.limit.enabled": true,
    "workbench.editor.showTabs": "single",
    "editor.hover.delay": 0,
    "editor.hover.hidingDelay": 0,
    "editor.quickSuggestionsDelay": 0,
    "editor.smoothScrolling": true,
    "apc.electron": {
        "opacity": 0.90,
    },
    "window.title": "${dirty}${activeEditorShort}${separator}${rootName}${separator}${profileName}${separator}",
    // "vscode-neovim.statusLineSeparator": "|>",
    "window.commandCenter": false,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.autoSaveDelay": 60000,
    "files.autoSave": "afterDelay",
    "workbench.layoutControl.enabled": false,
    // editor experience - end

    "terminal.integrated.persistentSessionReviveProcess": "never",
    "terminal.integrated.enablePersistentSessions": false,
    "terminal.integrated.hideOnStartup": "always",

    // catppuccin color theme - begin
    "catppuccin.extraBordersEnabled": true,
    "workbench.colorTheme": "Catppuccin Mocha",
    "catppuccin.italicKeywords": false,
    "catppuccin.bracketMode": "dimmed",
    "terminal.integrated.minimumContrastRatio": 1,
    "window.titleBarStyle": "custom",
    "catppuccin.colorOverrides": {
        "mocha": {
            "base": "#121222",
            "mantle": "#0E0E19",
            "crust": "#030310",
        }
    },
    "catppuccin.italicComments": false,
    // catppuccin color theme - end

    // fonts - begin
    "editor.fontFamily": "'Monaspace Neon Var', monospace",
    "editor.fontWeight": "300",
    "editor.fontSize": 14,
    "editor.fontVariations": false,
    "editor.fontLigatures": "'liga', 'dlig', 'ss01', 'ss02', 'ss03', 'ss04', 'ss05', 'ss06', 'ss07', 'ss08'",
    "apc.imports": [
        "file:///C:/Users/Radu/source/repos/config/vscode/fonts.css",
        "file:///C:/Users/Radu/source/repos/config/vscode/fonts.js",
    ],
    "editor.inlayHints.fontFamily": "Monaspace Krypton Var",
    // fonts - end

    // python - begin
    "python.analysis.completeFunctionParens": true,
    "python.analysis.autoFormatStrings": true,
    "python.analysis.gotoDefinitionInStringLiteral": true,
    "python.analysis.autoImportCompletions": true,
    "python.analysis.inlayHints.callArgumentNames": true,
    "python.analysis.inlayHints.functionReturnTypes": true,
    "python.analysis.inlayHints.pytestParameters": true,
    "python.analysis.inlayHints.variableTypes": true,
    "python.analysis.typeCheckingMode": "basic",
    "python.analysis.enablePytestSupport": true,
    "python.analysis.indexing": true,
    "python.languageServer": "Pylance",
    // python - end

    // errorlens - begin
    "errorLens.gutterIconSet": "letter",
    "errorLens.gutterIconsEnabled": true,
    "workbench.hover.delay": 0,
    "cSpell.spellCheckDelayMs": 150,
    "errorLens.delayMode": "debounce",
    "errorLens.enabledDiagnosticLevels": [
        "error",
        "warning",
        "info",
        "hint"
    ],
    // errorlens - end

    "gitlens.plusFeatures.enabled": false,
    "gitlens.blame.heatmap.location": "left",
    "gitlens.telemetry.enabled": false,

    // language specific - begin
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter"
    },
    "[git-commit]": {
        "editor.rulers": [
            50
        ],
        "workbench.editor.restoreViewState": false
    },
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "[css]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "diffEditor.hideUnchangedRegions.enabled": true,
    "diffEditor.ignoreTrimWhitespace": false,
    "rust-analyzer.check.command": "clippy",
    "notebook.output.textLineLimit": 100,
    "workbench.editor.labelFormat": "long",
    "cSpell.userWords": [
        "Popa"
    ],
    // language specific - end
}
